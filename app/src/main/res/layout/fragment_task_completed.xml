<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="12dp"
    android:paddingHorizontal="12dp">

    <TextView
        android:id="@+id/completed_completedNumberText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/completed_deleteButton"
        app:layout_constraintEnd_toStartOf="@+id/completed_deleteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/completed_deleteButton"
        tools:text="19 tasks completed"/>

    <Button
        android:id="@+id/completed_deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorTextLight" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/completed_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/completed_deleteButton"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_task_list_row" />

</androidx.constraintlayout.widget.ConstraintLayout>